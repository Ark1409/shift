{
    "version": 2,
    "configurePresets": [{
            "name": "mingw-x64-debug",
            "displayName": "MinGW Debug x64",
            "binaryDir": "${sourceDir}/build",
            "generator": "MinGW Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "mingw-x64-release",
            "displayName": "MinGW Release x64",
            "binaryDir": "${sourceDir}/build",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Wpedantic -flto"
            }
        }
    ]
}